<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mam.alicamp">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alicamp"
        android:usesCleartextTraffic="true"
        tools:targetApi="tiramisu">

        <activity
            android:name=".ui.actividades.TuberiaCatastrada"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.VisualizaFoto"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.PermisosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.FinCatastro"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.ListaTuberias"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.Dimensiones"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.CallesUbicacion"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.PozoCatastrado"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.ListaPozos"
            android:exported="false" />
        <activity
            android:name=".ui.actividades.MainActivity"
            android:exported="true" />

        <activity
            android:name=".ui.actividades.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>